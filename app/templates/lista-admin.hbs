<div class="container">
<div class="row">
    <div class="col s12">
      <div class="row">

        <div class="input-field col s9">


          {{#power-select
            options=listaAdmin
            searchPlaceholder="escribir email"
            placeholder="buscar Admin"
            selected=selectedAdmin
              searchField="email"
            onchange=(action (mut selectedAdmin))
            as |admin|
          }}
            {{admin.nombre}}
          {{/power-select}}

        </div>
        <div class="input-field col s3">
<a class="waves-effect waves-light btn #0091ea light-blue accent-4"{{action 'clean'}}><i class="material-icons left">send</i>limpiar</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row ">
    {{#if selectedAdmin.nombre}}
    {{tarjeta-administrador administrator=selectedAdmin edit=(action 'edit')}}
    {{else}}
    {{#each model as |admin|}}
    {{#if admin.nombre}}
    {{tarjeta-administrador administrator=admin edit=(action 'edit')}}
    {{/if}}
    {{else}}
    <h2>no hay registros :(</h2>
    {{/each}}
    {{/if}}
  </div>
</div>
