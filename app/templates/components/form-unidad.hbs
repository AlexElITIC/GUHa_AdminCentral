<h3>Registro de unidad</h3>
<div class="row #b3e5fc light-blue lighten-4">
<div class="col s5">
  <div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12">
        {{input id="nombre" type="text" class="validate" value=model.nombre}}
        <label for="nombre">Nombre</label>
      </div>
      <div class="input-field col s12">
        {{input id="pais" type="text" class="validate" value=model.pais}}
        <label for="pais">Pais</label>
      </div>
      <div class="input-field col s12">
        {{input id="estado" type="text" class="validate" value=model.estado}}
        <label for="estado">Estado</label>
      </div>
      <div class="input-field col s12">
        {{input id="municipio" type="text" class="validate" value=model.municipio}}
        <label for="municipio">Municipio</label>
      </div>
      <div class="input-field col s12">
        {{input id="colonia" type="text" class="validate" value=model.colonia}}
        <label for="colonia">Colonia</label>
      </div>
      <div class="input-field col s12">
        {{input id="cp" type="text" class="validate" value=model.cp}}
        <label for="cp">Codigo postal</label>
      </div>
          <div class="col s6">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                {{input type="text" id="admin1" class="autocomplete"}}
                <label for="admin1">Administrador 1</label>
              </div>
            </div>
          </div>
  <div class="col s6">
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">person</i>
        <input type="text" id="admin2" class="autocomplete">
        <label for="admin2">Administrador 2</label>
      </div>
    </div>
  </div>
    </div>
  </form>
</div>
</div>
<div class="container">
<div class="col s7">
  <div id="map">
    {{#if model.latitud}}
    {{g-map lat=model.latitud lng=model.longitud
      zoom=30}}
    {{else}}
      {{g-map lat='0' lng='0'
      zoom=10}}
    {{/if}}
  </div>

 <form class="col s12" id="form">
   <div class="row">
     <div class="input-field col s6">
       <i class="material-icons prefix">place</i>
       {{input id="latitud" type="text" class="validate" value=latitud}}
       <label for="latitud">Latitud</label>
     </div>
     <div class="input-field col s6">
       {{input id="longitud" type="text" class="validate" value=longitud}}
       <label for="longitud">Longitud</label>
     </div>
   </div>

<a class="waves-effect waves-light btn #0091ea light-blue accent-4" {{action 'guardarUnidad' model}}><i class="material-icons right">send</i>guardar</a>
<a class="waves-effect waves-light btn #0091ea light-blue accent-4" {{action 'probarCoordenadas'}}><i class="material-icons right">place</i>probar</a>
 </form>

  </div>

</div>
</div>
