<div class="col s4">
      <div class="card">
        <div class="card-image">
          {{#if administrator.imageUrl}}
                <img id="output" src={{administrator.imageUrl}} height="320" width="320" hidden={{shouldHideImage}}>
                {{else}}
                <img src="http://www.thepixelfarm.co.uk/wp-content/uploads/2016/05/admin_v01D_support.png">
              {{/if}}

          <a class="btn-floating halfway-fab waves-effect waves-light light-blue" {{action 'edit' administrator}}><i class="material-icons">create</i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{administrator.nombre}}</span>
          <table class="bordered">
         <tbody>
           <tr>
             <td><b>Telefono:</b></td>
             <td>{{administrator.telefono}}</td>
           </tr>

           <tr>
             <td><b>Correo:</b></td>
             <td>{{administrator.email}}</td>
           </tr>
           <tr>
             <td><b>Direccion:</b></td>
             <td>{{administrator.direccion}}</td>
           </tr>
         </tbody>
       </table></div>
        <div class="card-action">

  <a class="waves-effect waves-light btn #e53935 red darken-1" {{action 'borrarAdmin' administrator}}><i class="material-icons left">delete</i>borrar</a>
</div>
      </div>
    </div>
  
