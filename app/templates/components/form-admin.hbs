<div class="row #b3e5fc light-blue lighten-4">
  <div class="col s5">
    <div class="row">

    <form class="col s12">
      <div class="row">
        {{m-wrapper}}
        <div class="input-field col s12">
          {{input id="name" type="text" class="validate" value=model.nombre}}
          <label for="name">Nombre</label>
        </div>
        <div class="input-field col s6">
          {{input id="last_name" type="text" class="validate" value=model.apellidoPaterno}}
          <label for="last_name">Apellido paterno</label>
        </div>
        <div class="input-field col s6">
          {{input id="last_name1" type="text" class="validate" value=model.apellidoMaterno}}
          <label for="last_name1">Apellido materno</label>
        </div>
        <div class="input-field col s12">
          {{input id="direccion" type="text" class="validate" value=model.direccion}}
          <label for="direccion">Direccion</label>
        </div>
        <div class="input-field col s12">
          {{input id="telefono" type="text" class="validate" value=model.telefono}}
          <label for="telefono">telefono</label>
        </div>
       {{#unless model.email}}

        <div class="input-field col s12">
          {{input id="email" type="email" class="validate" value=email}}
          <label for="correo">correo</label>
        </div>
        <div class="input-field col s12">
          {{input id="password" type="password" class="validate" value=password}}
          <label for="password">password</label>
        </div>
        {{/unless}}
      </div>

    </form>
  </div>
  </div>
  <div class="container">
  <div class="col s7">
    <h4 align="center">Vista</h4>
    <div class="row">
      <div class="col s6">
        {{x-file-input class="waves-effect waves-light btn #0091ea light-blue accent-4" multiple=false name="files" action=(action "SelectImage") accept="image/*" alt="Agregar Imagen"}}
      </div>
      <div class="col 6">
        <a class="waves-effect waves-light btn #0091ea light-blue accent-4" {{action 'guardarAdmin' model}}><i class="material-icons right">send</i>guardar</a>
      </div>
    </div>
    {{#if model.imageUrl}}
    <img id="output" src={{model.imageUrl}} height="400" width="400" hidden={{shouldHideImage}} class="imagen">
    {{else}}
    <img src="http://www.thepixelfarm.co.uk/wp-content/uploads/2016/05/admin_v01D_support.png" height="400" width="400" class="imagen">
    {{/if}}
    </div>
  </div>
</div>
